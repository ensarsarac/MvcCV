
@model MvcCV.Models.Entity.TblEgitim


@{
    ViewBag.Title = "EgitimGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid p-5">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="text-primary">Eğitim Bilgisi Güncelle</h2>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">

            <form method="post" action="/Egitim/EgitimGuncelle/">
                @Html.HiddenFor(x => x.ID)
                <div class="form-group">
                    <label class="col-form-label">Başlık</label>
                    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="col-form-label">Alt Başlık 1</label>
                    @Html.TextBoxFor(x => x.AltBaslik1, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="col-form-label">Alt Başlık 2</label>
                    @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="col-form-label">GNO</label>
                    @Html.TextBoxFor(x => x.GNO, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="col-form-label">Tarih</label>
                    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
                <a href="/Egitim/Index/" class="btn btn-secondary mt-3 ml-3">İptal Et</a>

            </form>

        </div>
    </div>
</div>