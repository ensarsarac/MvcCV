@model MvcCV.Models.Entity.TblAdmin

@{
    ViewBag.Title = "AdminGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid p-5">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="text-primary">Yeni Admin Ekle</h2>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">

            <form method="post" action="/Admin/AdminGuncelle/">
                @Html.HiddenFor(x=>x.ID)
                <div class="form-group">
                    <label class="col-form-label">Kullanıcı Adı</label>
                    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="col-form-label">Şifre</label>
                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
                <a href="/Admin/AdminIslemler/" class="btn btn-secondary mt-3 ml-3">İptal Et</a>

            </form>

        </div>
    </div>
</div>