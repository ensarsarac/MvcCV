
@model MvcCV.Models.Entity.TblSosyalMedya


@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid p-5">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="text-primary">Yeni Sosyal Medya Hesabı Ekle</h2>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">

            <form method="post" action="/SosyalMedya/Ekle/">
                <div class="form-group">
                    <label class="col-form-label">Sosyal Medya</label>
                    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="col-form-label">Link</label>
                    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })

                </div>

                <div class="form-group">
                    <label class="col-form-label">İkon</label>
                    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
                <a href="/SosyalMedya/Index/" class="btn btn-secondary mt-3 ml-3">İptal Et</a>

            </form>

        </div>
    </div>
</div>